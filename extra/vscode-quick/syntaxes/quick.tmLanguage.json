{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quick",
	"patterns": [
		{
			"include": "#function-declaration"
		},
		{
			"include": "#keyword"
		},
		{
			"include": "#string"
		},
		{
			"include": "#char"
		},
		{
			"include": "#single-line-comment"
		},
		{
			"include": "#multi-line-comment"
		},
		{
			"include": "#decimal-literal"
		},
		{
			"include": "#function-call"
		},
		{
			"include": "#type"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"function-declaration": {
			"match": "\\b(fun)\\b\\s*(\\w+)",
			"captures": {
				"1": {
					"name": "keyword.control.quick"
				},
				"2": {
					"name": "entity.name.function.quick"
				}
			}
		},
		"keyword": {
			"patterns": [{
				"name": "keyword.control.quick",
				"match": "\\b(var|val|fun|struct|union|enum|return|extern|if|else|switch|case|while|for|of|by|as|defer|sizeof|true|false)\\b"
			}]
		},
		"string": {
			"name": "string.quoted.double.quick",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.quick",
					"match": "\\\\."
				}
			]
		},
		"char": {
			"name": "string.quoted.single.quick",
			"match": "'.'"
		},
		"single-line-comment": {
			"name": "comment.line.double-slash.quick",
			"begin": "//",
			"end": "$"
		},
		"multi-line-comment": {
			"name": "comment.block.quick",
			"begin": "/\\*",
			"end": "\\*/",
			"patterns": [
				{
					"include": "#multi-line-comment"
				}
			]
		},
		"decimal-literal": {
			"name": "constant.numeric.decimal.quick",
			"match": "\\b\\d\\d*(\\.\\d*)?\\b"
		},
		"function-call": {
			"match": "(\\w+)\\s*(\\.<.*>)?\\(",
			"captures": {
				"1": {
					"name": "entity.name.function.quick"
				},
				"2": {
					"patterns": [
						{
							"include": "#type"
						}
					]
				}
			}
		},
		"type": {
			"name": "entity.name.type.quick",
			"match": "\\b[A-Z]\\w*\\b"
		},
		"variable": {
			"name": "entity.name.variable.quick",
			"match": "\\b[a-z]\\w*\\b"
		}

	},
	"scopeName": "source.quick"
}